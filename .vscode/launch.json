{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Dotnet Console Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/DotnetDebug/DotnetDebug.csproj"
        },
        {
            "name": "C#: Dotnet Console Debug (MCP CoreCLR)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/DotnetDebug/bin/Debug/net10.0/DotnetDebug.dll",
            "cwd": "${workspaceFolder}/src/DotnetDebug",
            "args": [
                "12",
                "18",
                "30"
            ],
            "stopAtEntry": true,
            "preLaunchTask": "build-dotnetdebug"
        },
        {
            "name": "C#: Dotnet Avalonia Debug (MCP CoreCLR)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/DotnetDebug.Avalonia/bin/Debug/net9.0/DotnetDebug.Avalonia.dll",
            "cwd": "${workspaceFolder}/src/DotnetDebug.Avalonia",
            "stopAtEntry": false,
            "preLaunchTask": "build-dotnetdebug-avalonia"
        },
        {
            "name": "C#: Dotnet Unit Tests Debug (MCP CoreCLR)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/tests/DotnetDebug.Tests/bin/Debug/net10.0/DotnetDebug.Tests.exe",
            "cwd": "${workspaceFolder}/tests/DotnetDebug.Tests",
            "args": [
                "--filter-uid",
                "<global namespace>.GcdCalculatorTests.1.1.ComputeGcd_TwoNumbers(System.Int64, System.Int64, System.Int64).3.1.0"
            ],
            "stopAtEntry": false,
            "preLaunchTask": "build-dotnetdebug-tests"
        },
        {
            "name": "C#: Dotnet UI Tests FlaUI Debug (MCP CoreCLR)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/tests/DotnetDebug.UiTests.FlaUI/bin/Debug/net10.0-windows7.0/DotnetDebug.UiTests.FlaUI.exe",
            "cwd": "${workspaceFolder}/tests/DotnetDebug.UiTests.FlaUI",
            "stopAtEntry": false,
            "preLaunchTask": "build-dotnetdebug-uitests-flaui"
        },
        {
            "name": "C#: Dotnet UI Tests UIAutomationTestKit Debug (MCP CoreCLR)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/tests/DotnetDebug.UiTests.UIAutomationTestKit/bin/Debug/net10.0-windows7.0/DotnetDebug.UiTests.UIAutomationTestKit.exe",
            "cwd": "${workspaceFolder}/tests/DotnetDebug.UiTests.UIAutomationTestKit",
            "args": [
                "--filter-uid",
                "DotnetDebug.UiTests.UIAutomationTestKit.Tests.UIAutomationTests.MainWindowUiAutomationTestKitTests.1.1.Calculate_ValidInput_ShowsResultAndSteps.1.1.0"
            ],
            "stopAtEntry": false,
            "preLaunchTask": "build-dotnetdebug-uitests-uiautomationtestkit"
        }
    ]
}
